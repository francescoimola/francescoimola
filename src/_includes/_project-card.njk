{%- macro projectCard(role, description, image) -%}
<article class="work">
  <figure>
    {% if image %}
      <img
        width="{{ image.width | default('100%') }}"
        height="{{ image.height | default('auto') }}"
        {% if image.width and image.height %}style="aspect-ratio: {{ image.width }} / {{ image.height }}"{% endif %}
        src="{{ image.src }}"
        alt="{{ image.alt }}"
        loading="lazy"
      />
      {% if image.title %}
        <figcaption>{{ image.title }}</figcaption>
      {% endif %}
    {% endif %}
  </figure>
  {% if role %}
    <strong class="role">{{ role }}</strong>
  {% endif %}
  {% if description %}
    <p class="description prevent-orphan">{{ description | safe }}</p>
  {% endif %}
</article>
{%- endmacro -%}