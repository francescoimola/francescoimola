{%- macro projectCard(role, description, image) -%}
<div class="work">
    {% if image %}
      <img
        width="{{ image.width | default('100%') }}"
        height="{{ image.height | default('auto') }}"
        {% if image.width and image.height %}style="aspect-ratio: {{ image.width }} / {{ image.height }}"{% endif %}
        src="{{ image.src }}"
        alt="{{ image.alt }}"
        loading="lazy"
        class="give-bg"
        eleventy:ignore
      />
      {% if image.title %}
      {% endif %}
    {% endif %}
    <div class="flex-between">
      <h3 class="small-like pad-top-sm" style="margin-bottom:0;">{{ image.title }}</h3>
    </div>
    {% if role %}
    <span class="role small-like">{{ role }}</span>
    {% endif %}
  {% if description %}
    <span class="description small-like">{{ description | safe }}</span>
  {% endif %}
</div>
{%- endmacro -%}