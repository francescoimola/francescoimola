<!DOCTYPE html>
<html lang="en">
{% include "_head.njk" %}

<body>
	<a href="#main-content" class="skip-link">Skip to main content</a>
	<header>
		{%- include "_header.njk" -%}
	</header>

	<main class="page-margins">
			{% if page.url != '/' %}
			<div class="secondary-header pad-btt-lg">
				<h1>{{ navtitle | default(title) }}</h1>
				{% include "_links.njk" %}
			</div>
			{% endif %}
			<div id="main-content">{{ content | safe }}</div>
	</main>

	{% if signup %}{% include "_signup-form.njk" %}{% endif %}
	{%- include "_footer.njk" -%}

	<script src="/assets/app-core.js" defer></script>
</body>

</html>