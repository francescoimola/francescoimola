		<script>
			// Auto-redirect missing blog category pages to main blog page
			(function() {
				const path = window.location.pathname;
				// Check if URL matches /blog/{anything}/ pattern (but not /blog/ itself)
				if (path.startsWith('/blog/') && path !== '/blog/' && path !== '/blog') {
					window.location.replace('/blog/');
				}
			})();
		</script>
